# Docker Compose Environment Variables
# Copy this file to .env for docker-compose usage

########################################################################
# Application Configuration
########################################################################
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

########################################################################
# Database Configuration
########################################################################
H2_USERNAME=sqlapp2_admin
H2_PASSWORD=SecurePassword123!

########################################################################
# Security Configuration
########################################################################
# Generate with: openssl rand -base64 32
JWT_SECRET=YourSecretKeyMustBeAtLeast32CharactersLongForSecurity
JWT_ACCESS_TOKEN_EXPIRATION=3600
JWT_REFRESH_TOKEN_EXPIRATION=86400

# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=YourEncryptionKeyMustBe32BytesBase64EncodedForAES

########################################################################
# CORS Configuration
########################################################################
CORS_ALLOWED_ORIGINS=https://yourdomain.com

########################################################################
# Performance Configuration
########################################################################
SQL_EXECUTION_TIMEOUT=300000
SQL_EXECUTION_MAX_ROWS=1000
SQL_DEFAULT_PAGE_SIZE=25
SQL_MAX_PAGE_SIZE=100

########################################################################
# Connection Pool Configuration
########################################################################
HIKARI_MIN_IDLE=10
HIKARI_MAX_POOL_SIZE=50
HIKARI_IDLE_TIMEOUT=600000
HIKARI_MAX_LIFETIME=1800000
HIKARI_CONNECTION_TIMEOUT=30000
HIKARI_VALIDATION_TIMEOUT=5000
HIKARI_LEAK_DETECTION=60000